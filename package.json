{
  "name": "gca-virtual",
  "version": "1.0.0",
  "description": "Plataforma educativa web con experiencias de realidad virtual",
  "main": "index.html",
  "scripts": {
    "start": "npx serve . -p 8000",
    "start-https": "npx serve . -p 8000 --ssl-cert ./cert.pem --ssl-key ./key.pem",
    "dev": "npx live-server --port=8000",
    "dev-https": "npx live-server --port=8000 --https",
    "cloudflare": "npx cloudflared tunnel --url http://localhost:8000",
    "setup-windows": "powershell -ExecutionPolicy Bypass -File scripts/generate-ssl-cert.ps1",
    "setup-linux": "chmod +x scripts/generate-ssl-cert.sh && ./scripts/generate-ssl-cert.sh",
    "build": "echo 'No build step required for static HTML/CSS/JS'",
    "test": "echo 'No tests configured yet'"
  },
  "keywords": [
    "education",
    "virtual-reality",
    "webxr",
    "dashboard",
    "badges",
    "responsive"
  ],
  "author": "GCA Virtual Team",
  "license": "MIT",
  "devDependencies": {
    "serve": "^14.2.0",
    "live-server": "^1.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/gca-virtual.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/gca-virtual/issues"
  },
  "homepage": "https://github.com/your-username/gca-virtual#readme"
} 